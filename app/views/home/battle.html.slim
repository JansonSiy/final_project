
.card.myCard.myCardPlayerMargin
  h5.card-title.myCardImgCon
    |  <img src="
    = current_user.avatar
    | " class="card-img-top trainerImg" alt="card-img-top"> <img src="
    = current_user.cards.first.img_url
    | " class="card-img-top pokemonImg" alt="card-img-top"> 
  .card-body
    h5.card-title.myCardPlayerTitle
      = current_user.cards.first.name
    p.card-text

    .progress
      .progress-bar.progress-bar-striped.progress-bar-animated.bg-success[role="progressbar" style="width: 100%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"]
        |  hp: 
        = current_user.cards.first.hp
        | /
        = current_user.cards.first.hp
    br
    .progress
      .progress-bar.progress-bar-striped.progress-bar-animated[role="progressbar" style="width: 100%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"]
        |  ability: 
        = current_user.cards.first.ability
    br
    .progress
      .progress-bar.progress-bar-striped.progress-bar-animated.bg-danger[role="progressbar" style="width: 100%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"]
        |  damage: 
        = current_user.cards.first.attack
.battleLink
  = link_to 'Battle', user_attack_path, method: :post
- if flash[:notice]
  .toast.toast-demo.fade.show.battleLinkResultMargin.myFlashNotice[role="alert" aria-live="assertive" aria-atomic="true"]
    .toast-body
      |  Battle is over! 
      br
      br
      .notice
        = flash[:notice].html_safe
      .mt-2.pt-2
        = link_to 'Back', challenge_path, class: "btn btn-primary btn-sm backLinkButton"
