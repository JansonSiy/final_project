- if user_signed_in?
    .profile_container
        .ava_container
            = image_tag current_user.avatar, class:"avatar"

        .play
            .winrate
                h6
                    = current_user.email.upcase
                span
                    | Winrate:
                    = current_user.winrate 
            .d-flex.justify-content.center
                a.play_icon href = challenge_path  
                    img.d_icon src="img_avatar/play-button.png" 

            a.deck href = deck_path
                img.d_icon src="img_avatar/deck.png" 

- else
    h4.welcome
        span 
            | Welcome to P
            img.pokeball src="img_avatar/pokeball.svg" alt=""
            | kemon App!

